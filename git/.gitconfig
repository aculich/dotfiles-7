[user]
    name = Alok Mishra
    email = alok@alokmishra.com
[color]
    ui = true
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = true
    pager = true
[diff]
    tool = vscode
[difftool "bc"]
    path = C:/Program Files/Beyond Compare 4/BComp.exe
[difftool "vscode"]
    cmd = code-insiders --wait --diff $LOCAL $REMOTE
[merge]
    tool = vscode
[mergetool "bc"]
    path = C:/Program Files/Beyond Compare 4/BComp.exe
[mergetool "vscode"]
	cmd = code-insiders --wait $MERGED
[push]
    default = simple
[mergetool]
    keepBackup = false
[core]
	editor = vim
    autocrlf = input
[pull]
	ff = only
[init]
	defaultBranch = master
