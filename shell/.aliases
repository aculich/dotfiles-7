export PATH=$PATH:~/.config/yarn/global/node_modules/.bin

node_run() {
    if [ -f ./yarn.lock ]; then
        pm=yarn
        $pm run "$1"
    elif [ -f ./package-lock.json ]; then
        pm=npm
        $pm run "$@"
    else
        echo "Have you installed the package?"
    fi

}

