alias gclwp=git_clone_wordpress
git_clone_wordpress() {
    dir="wordpress"
    if [[ $# -ne 0 ]]; then
        dir=${1}
    fi
    git clone --depth 1 https://github.com/WordPress/WordPress.git $dir && rm -rf $dir/.git;
}

