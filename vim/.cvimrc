" Setup: Sync directly with online dropbox link for automatic updates, git will updated once comitted.
" https://www.dropbox.com/s/06wjicemz4te1dl/.cvimrc?dl=1

set nohud
set nosmoothscroll
set noautofocus

set autoupdategist

set typelinkhints
" set numerichints    "requried for typelinkhints

let searchlimit = 20
let scrollstep = 60
let barposition = "bottom"

let mapleader = ","

"NAVIGATION

map d closeTab
map u lastClosedTab

map <C-h> moveTabLeft
map <C-l> moveTabRight

map h previousTab
map l nextTab

map S :tabnew google<space>

map <leader>e :open! chrome://extensions<CR>
map <leader>p :togglepin<CR>

map R reloadTabUncached

map <C-u> scrollPageUp
map <C-d> scrollPageDown

unmap a

map Y vy
map y yankDocumentUrl
map p P

