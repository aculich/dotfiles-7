// Keybindings //
[
    {
        "key": "ctrl+h",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        "key": "alt+`",
        "command": "workbench.action.focusActiveEditorGroup",
    },
    {
        "key": "alt+`",
        "command": "workbench.action.terminal.focus",
        "when": "editorFocus"
    },
    {
        "key": "alt+tab",
        "command": "workbench.files.action.focusFilesExplorer"
    },
    {
        "key": "alt+tab",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "filesExplorerFocus"
    },
    {
        "key": "ctrl+`",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+alt+z",
        "command": "workbench.action.toggleZenMode"
    },
    {
        "key": "alt+w",
        "command": "workbench.action.closeActiveEditor",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenNavigatePreviousInFilePicker",
        "when": "inFilesPicker && inQuickOpen"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenNavigateNextInFilePicker",
        "when": "inFilesPicker && inQuickOpen"
    },
    {
        "key": "ctrl+n",
        "command": "workbench.action.quickOpenNavigateNextInTerminalPicker",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpenNavigatePreviousInTerminalPicker",
        "when": "inQuickOpen"
    },
    
    // Sync //
    {
        "key": "ctrl+alt+d",
        "command": "syncing.downloadSettings"
    },
    {
        "key": "ctrl+alt+u",
        "command": "syncing.uploadSettings"
    },

    // Bookmarks //
    {
        "key": "ctrl+alt+h",
        "command": "bookmarks.jumpToPrevious",
        "when": "editorTextFocus"
    },
    {
        "key": "shift+alt+h",
        "command": "bookmarks.expandSelectionToPrevious",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+alt+b",
        "command": "bookmarks.listFromAllFiles"
    },

    // Explorer //
    {
        "key": "insert",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus"
    },
    {
        "key": "shift+insert",
        "command": "explorer.newFolder"
    },
    {
        "key": "shift+c",
        "command": "workbench.files.action.collapseExplorerFolders",
        "when": "filesExplorerFocus"
    },

    // Miscellaneous //
    {
        "key": "ctrl+alt+g",
        "command": "git.viewHistory"
    },
    {
        "key": "ctrl+alt+r",
        "command": "workbench.action.reloadWindow"
    },
    {
        "key": "ctrl+alt+=",
        "command": "editor.action.fontZoomIn"
    },
    {
        "key": "ctrl+alt+-",
        "command": "editor.action.fontZoomOut"
    },
    {
        "key": "ctrl+alt+0",
        "command": "editor.action.fontZoomReset"
    },
    {
        "key": "ctrl+shift+v",
        "command": "markdown.showPreviewToSide",
        "when": "editorLangId == 'markdown'"
    },
    {
        "key": "ctrl+alt+t",
        "command": "editor.action.peekTypeDefinition"
    },
    {
        "key": "ctrl+alt+p",
        "command": "workbench.action.openRecent"
    },
    // {
    //     "key": "ctrl+r",
    //     "command": "editor.action.startFindReplaceAction",
    //     "when": "editorHasSelection"
    // },
    {
        "key": "ctrl+alt+,",
        "command": "workbench.action.openGlobalKeybindingsFile"
    },
    {
        "key": "shift+enter",
        "command": "python.execInTerminal",
        "when": "editorFocus && !findInputFocussed && !replaceInputFocussed && !editorHasSelection && editorLangId == 'python'"
    },
    {
        "key": "ctrl+m ctrl+b",
        "command": "md-shortcut.toggleBold",
        "when": "editorTextFocus && editorLangId == 'markdown'"
    },
    {
        "key": "ctrl+b",
        "command": "-md-shortcut.toggleBold",
        "when": "editorTextFocus && editorLangId == 'markdown'"
    },
    {
        "key": "ctrl+m ctrl+8",
        "command": "md-shortcut.toggleBullets",
        "when": "editorTextFocus && editorLangId == 'markdown'"
    },
    {
        "key": "ctrl+m ctrl+b",
        "command": "-md-shortcut.toggleBullets",
        "when": "editorTextFocus && editorLangId == 'markdown'"
    },
    {
        "key": "ctrl+,",
        "command": "workbench.action.openSettingsJson"
    },
]