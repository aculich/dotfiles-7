{
    ////// VSCODE //////
    "terminal.integrated.shell.windows": "C:\\Workspace\\Apps\\Git\\bin\\bash.exe",
    "workbench.colorTheme": "Gruvbox Dark Medium",
    "workbench.iconTheme": "material-icon-theme",
    "material-icon-theme.activeIconPack": "angular",
    "editor.wordWrap": "on",
    "editor.selectionHighlight": false,
    "editor.detectIndentation": false,


    ////// VIM //////
    "vim.handleKeys":{
        "<C-a>": false,
        "<C-b>": false,
        "<C-c>": false,
        "<C-f>": false,
        "<C-k>": false,
        "<C-v>": false,
        "<C-y>": false,
    },

    "vim.leader": ",",
    "vim.hlsearch": true,
    "vim.searchHighlightColor": "rgba(104, 157, 106, 0.4)", // #689D6A
    // "vim.searchHighlightColor": "rgba(214, 96, 16, 0.4)", // #D65D0E

    // use native undo and redo
    "vim.otherModesKeyBindings": [
        {
            "before": ["u"], "after": [],
            "commands": [ { "command": "undo" } ]
        },
        {
            "before": ["C-r"], "after": [],
            "commands": [ { "command": "redo" } ]
        },
    ],

    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before":["leader", "/"], "after":[],
            "commands": [ { "command": ":nohl", "args": [] } ]
        },
        {
            "before":["leader", "b"], "after":[],
            "commands": [ { "command": "workbench.action.tasks.build", "args": [] } ]
        },
        {
            "before": ["leader", "w"], "after": [],
            "commands": [ { "command": "workbench.action.files.save", "args": [] } ]
        }
    ],

    ////// SASS //////
    "liveSassCompile.settings.formats":[
        {
            "format": "compact",
            "extensionName": ".css"
        }
    ],
    "liveSassCompile.settings.includeItems": [
        // "**/css/**",
    ],
    "liveSassCompile.settings.generateMap": false,


    ////// MISCELLANEOUS //////
    "beautify.config": {
        "indent_size": 4,
        "newline_between_rules": true,
        "space_around_combinator": true,
    },

    "files.associations": {
        "*.aliases": "shellscript"
    },

    "terminal.integrated.showExitAlert": false,
    "git.enableSmartCommit": true,
    "php.validate.enable": false,
    "liveServer.settings.donotShowInfoMsg": true,
    "material-icon-theme.showUpdateMessage": false,    
    "window.menuBarVisibility": "toggle",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.feedback.visible": false,
    "explorer.confirmDelete": false,
    "gitlens.keymap": "alternate",
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    ////// AREA UNDER DEVELOPMENT //////
    "vim.leader": "<space>",
    "vim.otherModesKeyBindingsNonRecursive": [
        {
            "before":["leader", "n"], "after":[],
            "commands": [ { "command": ":nohl", "args": [] } ]
        },
        {
            "before": ["leader", "s"], "after": [],
            "commands": [ { "command": "workbench.action.files.save", "args": [] } ]
        }
    ],

    "workbench.colorCustomizations": {
        "editorSuggestWidget.selectedBackground": "#076678"
        // "editor.background": "#1D2021",
        // "editor.selectionBackground": "#689D6A44",
        // "editorCursor.foreground": "#BBB",
        // "editor.lineHighlightBackground": "#282828",
    },
    "gitlens.advanced.messages": {
        "suppressCommitHasNoPreviousCommitWarning": false,
        "suppressCommitNotFoundWarning": false,
        "suppressFileNotUnderSourceControlWarning": false,
        "suppressGitVersionWarning": false,
        "suppressLineUncommittedWarning": false,
        "suppressNoRepositoryWarning": false,
        "suppressResultsExplorerNotice": false,
        "suppressShowKeyBindingsNotice": true
    },
    "explorer.confirmDragAndDrop": false,

}